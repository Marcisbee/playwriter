{
  "$schema": "https://raw.githubusercontent.com/neutralinojs/neutralinojs/main/schemas/neutralino.config.schema.json",
  "applicationId": "js.neutralino.zero",
  "version": "1.0.0",
  "defaultMode": "window",
  "documentRoot": "/vite-src/dist/",
  "url": "/",
  "port": 3000,
  "enableServer": true,
  "enableNativeAPI": true,
  "nativeAllowList": [
    "app.*",
    "os.*",
    "clipboard.*",
    "filesystem.*",
    "debug.log"
  ],
  "modes": {
    "window": {
      "title": "Playwriter",
      "width": 500,
      "height": 800,
      "minWidth": 400,
      "minHeight": 200,
      "center": true,
      "fullScreen": false,
      "alwaysOnTop": false,
      "icon": "/vite-src/public/appIcon.png",
      "enableInspector": true,
      "borderless": false,
      "maximize": false,
      "hidden": false,
      "resizable": true
    }
  },
  "cli": {
    "binaryName": "myapp",
    "resourcesPath": "/vite-src/dist/",
    "extensionsPath": "/extensions/",
    "binaryVersion": "6.0.0",
    "clientVersion": "5.4.0",
    "frontendLibrary": {
      "patchFile": "/vite-src/index.html",
      "devUrl": "http://localhost:5173",
      "projectPath": "/vite-src/",
      "initCommand": "npm install",
      "devCommand": "npm run dev",
      "buildCommand": "npm run build"
    }
  },
  "buildScript": {
    "mac": {
      "architecture": [
        "x64",
        "arm64",
        "universal"
      ],
      "minimumOS": "10.13.0",
      "appName": "Playwriter",
      "appBundleName": "Playwriter",
      "appIdentifier": "com.playwriter.ext.bun.app",
      "appIcon": "resources/icons/icon.icns"
    }
  }
}
